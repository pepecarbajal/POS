<Window x:Class="POS.ventanas.MovimientoCajaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movimiento de Caja" Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblTitulo" 
               Content="Movimiento de Caja" 
               FontSize="20" 
               FontWeight="Bold" 
               Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Monto:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtMonto" 
                     FontSize="16" 
                     Padding="5"
                     Text="0.00"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Concepto:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtConcepto" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Usuario:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsuario" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Observaciones:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtObservaciones" 
                     Height="80" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Aceptar" 
                    Width="100" 
                    Margin="0,0,10,0"
                    Click="BtnAceptar_Click"
                    IsDefault="True"/>
            <Button Content="Cancelar" 
                    Width="100"
                    Click="BtnCancelar_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
