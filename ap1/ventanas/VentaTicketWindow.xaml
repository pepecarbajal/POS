<Window x:Class="POS.ventanas.VentaTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket de Venta"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#8b5cf6"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#22c55e"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#e0e0e0"/>

        <!-- Estilo redondeado y elegante para botones -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Contenedor principal con sombra -->
    <Border Background="White"
            BorderBrush="{StaticResource BorderColor}"
            BorderThickness="2"
            CornerRadius="12"
            Padding="0">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              Opacity="0.3"
                              BlurRadius="20"
                              ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource PrimaryColor}"
                    CornerRadius="10,10,0,0"
                    Padding="20,18">
                <StackPanel>
                    <TextBlock Text="🧾 TICKET DE VENTA"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="FechaTextBlock"
                               FontSize="12"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                    <TextBlock x:Name="TicketNumeroTextBlock"
                               FontSize="12"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Contenido scrollable -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="20">
                <StackPanel>
                    <!-- Lista de productos -->
                    <TextBlock Text="Productos:"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <ItemsControl x:Name="ItemsListView">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="0,0,0,1"
                                        Padding="10,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding NombreProducto}"
                                                       FontWeight="SemiBold"
                                                       FontSize="13"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock Text="{Binding Cantidad, StringFormat='Cantidad: {0}'}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource TextSecondary}"/>
                                                <TextBlock Text=" × "
                                                           FontSize="11"
                                                           Foreground="{StaticResource TextSecondary}"
                                                           Margin="5,0"/>
                                                <TextBlock Text="{Binding PrecioUnitario, StringFormat='${0:F2}'}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource TextSecondary}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Subtotal, StringFormat='${0:F2}'}"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Total -->
                    <Border Background="{StaticResource PrimaryColor}"
                            Padding="15"
                            Margin="0,20,0,0"
                            CornerRadius="5">
                        <Grid>
                            <TextBlock Text="TOTAL:"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Left"/>
                            <TextBlock x:Name="TotalTextBlock"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Información de pago -->
                    <Border Background="#f3f4f6"
                            Padding="15"
                            Margin="0,15,0,0"
                            CornerRadius="5">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <TextBlock Text="Recibido:"
                                           FontSize="14"
                                           Foreground="{StaticResource TextSecondary}"
                                           HorizontalAlignment="Left"/>
                                <TextBlock x:Name="RecibidoTextBlock"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextSecondary}"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Grid>
                                <TextBlock Text="Cambio:"
                                           FontSize="14"
                                           Foreground="{StaticResource TextSecondary}"
                                           HorizontalAlignment="Left"/>
                                <TextBlock x:Name="CambioTextBlock"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource SuccessGreen}"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="¡Gracias por su compra!"
                               FontSize="14"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"
                               Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer con botones -->
            <Border Grid.Row="2"
                    Background="#f9fafb"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,10,10"
                    Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Style="{StaticResource RoundedButton}"
                            Background="{StaticResource PrimaryColor}"
                            Content="💾 Guardar PDF"
                            Click="GuardarPdf_Click"/>

                    <Button Grid.Column="1"
                            Style="{StaticResource RoundedButton}"
                            Background="{StaticResource SuccessGreen}"
                            Content="🖨️ Imprimir"
                            Click="Imprimir_Click"/>

                    <Button Grid.Column="2"
                            Style="{StaticResource RoundedButton}"
                            Background="{StaticResource TextSecondary}"
                            Content="✕ Cerrar"
                            Click="Cerrar_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
