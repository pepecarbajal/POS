<Window x:Class="POS.ventanas.VentaTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket de Venta" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#8b5cf6"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="White"/>
        <SolidColorBrush x:Key="BorderColor" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#666"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#22c55e"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}" 
                Padding="20">
            <StackPanel>
                <TextBlock Text="TICKET DE VENTA" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="FechaTextBlock"
                          FontSize="12" 
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
                <TextBlock x:Name="TicketNumeroTextBlock"
                          FontSize="12" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="20">
            <StackPanel>
                <!-- Items -->
                <TextBlock Text="Productos:" 
                          FontSize="16" 
                          FontWeight="Bold"
                          Margin="0,0,0,10"/>

                <ItemsControl x:Name="ItemsListView">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{StaticResource BorderColor}" 
                                   BorderThickness="0,0,0,1" 
                                   Padding="10,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding NombreProducto}" 
                                                  FontWeight="SemiBold"
                                                  FontSize="13"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="{Binding Cantidad, StringFormat='Cantidad: {0}'}" 
                                                      FontSize="11"
                                                      Foreground="{StaticResource TextSecondary}"/>
                                            <TextBlock Text=" × " 
                                                      FontSize="11"
                                                      Foreground="{StaticResource TextSecondary}"
                                                      Margin="5,0"/>
                                            <TextBlock Text="{Binding PrecioUnitario, StringFormat='${0:F2}'}" 
                                                      FontSize="11"
                                                      Foreground="{StaticResource TextSecondary}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1" 
                                              Text="{Binding Subtotal, StringFormat='${0:F2}'}" 
                                              FontWeight="Bold"
                                              FontSize="14"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Background="{StaticResource PrimaryColor}" 
       Padding="15" 
       Margin="0,20,0,0"
       CornerRadius="5">
                    <Grid>
                        <TextBlock Text="TOTAL:" 
                  FontSize="18" 
                  FontWeight="Bold"
                  Foreground="White"
                  HorizontalAlignment="Left"/>
                        <TextBlock x:Name="TotalTextBlock"
                  FontSize="20" 
                  FontWeight="Bold"
                  Foreground="White"
                  HorizontalAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Información de pago -->
                <Border Background="#f3f4f6" 
       Padding="15" 
       Margin="0,15,0,0"
       CornerRadius="5">
                    <StackPanel>
                        <!-- Recibido -->
                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="Recibido:" 
                      FontSize="14" 
                      Foreground="{StaticResource TextSecondary}"
                      HorizontalAlignment="Left"/>
                            <TextBlock x:Name="RecibidoTextBlock"
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Foreground="{StaticResource TextSecondary}"
                      HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- Cambio -->
                        <Grid>
                            <TextBlock Text="Cambio:" 
                      FontSize="14" 
                      Foreground="{StaticResource TextSecondary}"
                      HorizontalAlignment="Left"/>
                            <TextBlock x:Name="CambioTextBlock"
                      FontSize="14" 
                      FontWeight="Bold"
                      Foreground="{StaticResource SuccessGreen}"
                      HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>


                <TextBlock Text="¡Gracias por su compra!" 
                          FontSize="14"
                          FontStyle="Italic"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"
                          Foreground="{StaticResource TextSecondary}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" 
               BorderBrush="{StaticResource BorderColor}" 
               BorderThickness="0,1,0,0"
               Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                       Content="Guardar PDF"
                       Click="GuardarPdf_Click"
                       Background="{StaticResource PrimaryColor}"
                       Foreground="White"
                       Padding="15,10"
                       Margin="0,0,5,0"
                       FontSize="13"
                       FontWeight="SemiBold"
                       BorderThickness="0"
                       Cursor="Hand"/>

                <Button Grid.Column="1"
                       Content="Imprimir"
                       Click="Imprimir_Click"
                       Background="{StaticResource SuccessGreen}"
                       Foreground="White"
                       Padding="15,10"
                       Margin="5,0"
                       FontSize="13"
                       FontWeight="SemiBold"
                       BorderThickness="0"
                       Cursor="Hand"/>

                <Button Grid.Column="2"
                       Content="Cerrar"
                       Click="Cerrar_Click"
                       Background="{StaticResource TextSecondary}"
                       Foreground="White"
                       Padding="15,10"
                       Margin="5,0,0,0"
                       FontSize="13"
                       FontWeight="SemiBold"
                       BorderThickness="0"
                       Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>
