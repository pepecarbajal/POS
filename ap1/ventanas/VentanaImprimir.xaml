<Window x:Class="POS.ventanas.VentanaImprimir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar Ticket a Imprimir" 
        Height="400" 
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#8b5cf6"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#22c55e"/>
        <SolidColorBrush x:Key="InfoBlue" Color="#3b82f6"/>
        <SolidColorBrush x:Key="OrangeColor" Color="#f59e0b"/>
        <SolidColorBrush x:Key="BorderColor" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#666"/>

        <Style x:Key="TicketButton" TargetType="Button">
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="15,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                          Text="{TemplateBinding Tag}"
                                          FontSize="28"
                                          VerticalAlignment="Center"
                                          Margin="0,0,15,0"/>

                                <ContentPresenter Grid.Column="1"
                                                HorizontalAlignment="Left" 
                                                VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White"
            BorderBrush="{StaticResource BorderColor}" 
            BorderThickness="2"
            CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Opacity="0.3" 
                            BlurRadius="20" 
                            ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryColor}" 
                    CornerRadius="10,10,0,0"
                    Padding="20,18">
                <StackPanel>
                    <TextBlock Text="🖨️  ¿Qué ticket desea imprimir?" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Seleccione una opción" 
                              FontSize="11" 
                              Foreground="White"
                              Opacity="0.85"
                              HorizontalAlignment="Center"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" 
                       Margin="0,15,0,10">

                <!-- Botón Ticket de Venta -->
                <Button x:Name="VentaButton"
                        Style="{StaticResource TicketButton}"
                        Background="{StaticResource InfoBlue}"
                        Tag="🧾"
                        Click="VentaButton_Click">
                    <StackPanel>
                        <TextBlock Text="Ticket de Venta" 
                                  FontSize="15" 
                                  FontWeight="Bold"/>
                        <TextBlock Text="Para entregar al cliente" 
                                  FontSize="11" 
                                  Opacity="0.9"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Botón Ticket de Pedido -->
                <Button x:Name="PedidoButton"
                        Style="{StaticResource TicketButton}"
                        Background="{StaticResource OrangeColor}"
                        Tag="📋"
                        Click="PedidoButton_Click">
                    <StackPanel>
                        <TextBlock Text="Ticket de Pedido" 
                                  FontSize="15" 
                                  FontWeight="Bold"/>
                        <TextBlock Text="Para cocina/barra (cafetería)" 
                                  FontSize="11" 
                                  Opacity="0.9"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Botón Ambos Tickets -->
                <Button x:Name="AmbosButton"
                        Style="{StaticResource TicketButton}"
                        Background="{StaticResource SuccessGreen}"
                        Tag="📄"
                        Click="AmbosButton_Click">
                    <StackPanel>
                        <TextBlock Text="Imprimir Ambos" 
                                  FontSize="15" 
                                  FontWeight="Bold"/>
                        <TextBlock Text="Ticket de Venta + Ticket de Pedido" 
                                  FontSize="11" 
                                  Opacity="0.9"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Footer con botón Cancelar -->
            <Border Grid.Row="2"
                    Background="#f9fafb"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,10,10"
                    Padding="15,12">
                <Button Content="✕  Cancelar"
                        Click="CancelarButton_Click"
                        Background="Transparent"
                        Foreground="{StaticResource TextSecondary}"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        Padding="20,8">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e5e7eb"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>