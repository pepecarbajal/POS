<Window x:Class="POS.ventanas.DevolucionParcialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Devolución Parcial" 
        Height="650" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#faf5ff"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#8b5cf6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7c3aed"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6d28d9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#e5e7eb"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d1d5db"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="30,25" 
                BorderBrush="#e9d5ff" BorderThickness="0,0,0,2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ffffff" Offset="0"/>
                    <GradientStop Color="#faf5ff" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Width="55" 
                        Height="55">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#c4b5fd" Offset="0"/>
                            <GradientStop Color="#8b5cf6" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border CornerRadius="14">
                        <TextBlock Text="↩️" 
                                  FontSize="28"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                </Border>

                <StackPanel Grid.Column="1" 
                           VerticalAlignment="Center"
                           Margin="20,0,0,0">
                    <TextBlock FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#4c1d95">
                        <Run Text="Devolución Parcial - Venta #"/>
                        <Run x:Name="VentaIdText"/>
                    </TextBlock>
                    <TextBlock Text="Selecciona los items que deseas devolver (productos, combos o tiempo)" 
                              Foreground="#7c3aed" 
                              FontSize="14" 
                              Margin="0,6,0,0"
                              FontWeight="Medium"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista de productos -->
        <Border Grid.Row="1" Margin="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#faf5ff" Offset="0"/>
                    <GradientStop Color="#f3e8ff" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="25">
                <ItemsControl x:Name="ProductosListBox">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                   BorderBrush="#ddd6fe"
                                   BorderThickness="2"
                                   CornerRadius="12"
                                   Padding="20"
                                   Margin="0,0,0,15"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="ProductoCard_Click"
                                   Tag="{Binding}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#8b5cf6" Opacity="0.15" BlurRadius="20" ShadowDepth="5"/>
                                </Border.Effect>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#a78bfa"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                            <GradientStop Color="#ffffff" Offset="0"/>
                                                            <GradientStop Color="#faf5ff" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="BorderBrush" Value="#8b5cf6"/>
                                                <Setter Property="BorderThickness" Value="3"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- CheckBox -->
                                    <CheckBox Grid.Column="0"
                                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                            VerticalAlignment="Center"
                                            Margin="0,0,20,0"
                                            Width="24"
                                            Height="24"/>

                                    <!-- Información del item -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding NombreItem}"
                                                 FontSize="16"
                                                 FontWeight="Bold"
                                                 Foreground="#4c1d95"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock FontSize="14" Foreground="#666" Margin="0,0,15,0">
                                                <Run Text="Cantidad disponible: "/>
                                                <Run Text="{Binding CantidadTotal}" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock FontSize="14" Foreground="#666">
                                                <Run Text="Precio unitario: "/>
                                                <Run Text="{Binding PrecioUnitario, StringFormat='${0:N2}'}" FontWeight="Bold"/>
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock Margin="0,4,0,0" FontSize="12" Foreground="#999">
                                            <Run Text="Tipo: "/>
                                            <Run Text="{Binding TipoItemTexto}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Selector de cantidad (solo visible si está seleccionado) -->
                                    <Border Grid.Column="2"
                                           Background="#f3e8ff"
                                           CornerRadius="8"
                                           Padding="15,10"
                                           Margin="0,0,15,0"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="Cantidad a devolver"
                                                     FontSize="11"
                                                     Foreground="#7c3aed"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="−" 
                                                       Width="32"
                                                       Height="32"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Background="White"
                                                       BorderBrush="#8b5cf6"
                                                       BorderThickness="2"
                                                       Foreground="#8b5cf6"
                                                       Cursor="Hand"
                                                       Click="DecrementarCantidad_Click"
                                                       Tag="{Binding}">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                                   CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#8b5cf6"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <Border Background="White"
                                                       BorderBrush="#8b5cf6"
                                                       BorderThickness="2"
                                                       CornerRadius="6"
                                                       Margin="8,0">
                                                    <TextBlock Text="{Binding CantidadADevolver}"
                                                             Width="45"
                                                             Height="32"
                                                             TextAlignment="Center"
                                                             FontSize="16"
                                                             FontWeight="Bold"
                                                             Foreground="#6d28d9"
                                                             VerticalAlignment="Center"/>
                                                </Border>

                                                <Button Content="+" 
                                                       Width="32"
                                                       Height="32"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Background="White"
                                                       BorderBrush="#8b5cf6"
                                                       BorderThickness="2"
                                                       Foreground="#8b5cf6"
                                                       Cursor="Hand"
                                                       Click="IncrementarCantidad_Click"
                                                       Tag="{Binding}">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                                   CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#8b5cf6"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                            <TextBlock Text="{Binding SubtotalDevolucion, StringFormat='Subtotal: ${0:N2}'}"
                                                     FontSize="12"
                                                     FontWeight="Bold"
                                                     Foreground="#6d28d9"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Badge de selección -->
                                    <Border Grid.Column="3"
                                           CornerRadius="12"
                                           Padding="12,6"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#8b5cf6" Offset="0"/>
                                                <GradientStop Color="#a78bfa" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="✓ Seleccionado"
                                                  FontSize="12"
                                                  FontWeight="Bold"
                                                  Foreground="White"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Padding="30,20" 
                BorderBrush="#e9d5ff" BorderThickness="0,2,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#faf5ff" Offset="0"/>
                    <GradientStop Color="#ffffff" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Total a devolver -->
                <Border Grid.Column="0"
                       Background="White"
                       BorderBrush="#8b5cf6"
                       BorderThickness="2"
                       CornerRadius="12"
                       Padding="20,15"
                       Margin="0,0,20,0">
                    <Grid>
                        <TextBlock Text="Total a devolver:"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 Foreground="#4c1d95"
                                 VerticalAlignment="Center"/>
                        <TextBlock x:Name="TotalDevolucionText"
                                 Text="$0.00"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="#8b5cf6"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Botones -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="✕ Cancelar" 
                           Style="{StaticResource SecondaryButton}"
                           Margin="0,0,12,0"
                           Click="Cancelar_Click"/>
                    <Button Content="✓ Procesar Devolución" 
                           Style="{StaticResource PrimaryButton}"
                           Click="Confirmar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>