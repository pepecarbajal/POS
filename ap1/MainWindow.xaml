<Window x:Class="POS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Valala Jump Park - Sistema de Gestión"
        Height="700" 
        Width="1200"
        Background="#0f0a1a"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Estilo mejorado para botones del menú -->
        <Style x:Key="SidebarMenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="18,13"/>
            <Setter Property="Margin" Value="10,3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Left" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2d1850"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3d2563"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botones del submenú -->
        <Style x:Key="SubmenuButton" TargetType="Button" BasedOn="{StaticResource SidebarMenuButton}">
            <Setter Property="Padding" Value="40,11"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#b8b8b8"/>
            <Setter Property="Margin" Value="10,2"/>
        </Style>

        <!-- Estilo para encabezados de sección -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#8b5cf6"/>
            <Setter Property="Margin" Value="20,24,0,8"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>
    </Window.Resources>

    <Grid Background="#0f0a1a">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Background="#1a0b2e"
                BorderThickness="0,0,1,0"
                BorderBrush="#2d1b4e">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  Direction="0" 
                                  ShadowDepth="0" 
                                  BlurRadius="20" 
                                  Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header con logo -->
                <StackPanel Grid.Row="0" 
                            Margin="0,35,0,25">

                    <!-- Logo con borde sutil -->
                    <Border Width="110" Height="110"
                            Background="#0d0520"
                            CornerRadius="55"
                            BorderBrush="#7c3aed"
                            BorderThickness="2"
                            Margin="0,0,0,18">
                        <Image Source="pack://application:,,,/logo/icono.png" 
                               Width="75"
                               Height="75"
                               Stretch="Uniform"/>
                    </Border>

                    <!-- Título principal -->
                    <TextBlock Text="VALALA"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,4"/>

                    <!-- Subtítulo -->
                    <TextBlock Text="Jump Park"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#9f7aea"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <TextBlock Text="Sistema de Gestión"
                               FontSize="11"
                               Foreground="#6b6b6b"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Menú de navegación -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="0,5,0,0">
                    <StackPanel>
                        <TextBlock Text="OPERACIONES"
                                   Style="{StaticResource SectionHeader}"/>

                        <Button Style="{StaticResource SidebarMenuButton}"
                                Click="VentasButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🛒" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Ventas" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="ADMINISTRACIÓN"
                                   Style="{StaticResource SectionHeader}"/>

                        <Button x:Name="ConfiguracionButton"
                                Style="{StaticResource SidebarMenuButton}"
                                Click="ConfiguracionButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Administración" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Submenú -->
                        <StackPanel x:Name="SubmenuPanel"
                                    Visibility="Collapsed"
                                    Background="#110823"
                                    Margin="10,6,10,6">
                            <Border Height="1" 
                                    Background="#8b5cf6" 
                                    Opacity="0.2"
                                    Margin="15,5,15,8"/>

                            <Button Style="{StaticResource SubmenuButton}"
                                    Click="ProductosButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📦" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Productos" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource SubmenuButton}"
                                    Click="CategoriasButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📑" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Categorías" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource SubmenuButton}"
                                    Click="CombosButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🎁" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Combos" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource SubmenuButton}"
                                    Click="PrecioTiempoButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⏱️" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Tiempo" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Border Height="1" 
                                    Background="#8b5cf6" 
                                    Opacity="0.2"
                                    Margin="15,8,15,5"/>
                        </StackPanel>

                        <TextBlock Text="REGISTROS"
                                   Style="{StaticResource SectionHeader}"/>

                        <Button Style="{StaticResource SidebarMenuButton}"
                                Click="DetallesVentasButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Detalles de Ventas" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Reloj digital -->
                <Border Grid.Row="2"
                        Background="#0d0520"
                        Margin="12,0,12,18"
                        CornerRadius="12"
                        BorderBrush="#8b5cf6"
                        BorderThickness="1">
                    <Grid Margin="0,18,0,18">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Hora -->
                        <TextBlock x:Name="ClockTextBlock"
                                   Grid.Row="0"
                                   Text="00:00 AM"
                                   FontSize="30"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>

                        <!-- Separador decorativo -->
                        <Border Grid.Row="1"
                                Height="2"
                                Width="80"
                                Margin="0,10,0,10"
                                HorizontalAlignment="Center">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="#8b5cf6" Offset="0.5"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Área de contenido principal -->
        <Grid Grid.Column="1">
            <Frame x:Name="MainFrame"
                   Source="paginas/ventas/VentasPag.xaml"
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>
        </Grid>
    </Grid>
</Window>