<Page x:Class="POS.paginas.combos.CombosPag"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:helpers="clr-namespace:POS.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Background="{StaticResource BackgroundGray}">

    <Page.Resources>
        <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                Style="{StaticResource CardStyle}"
                Padding="25" 
                Margin="0,0,10,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Agregar Combo" 
                              Style="{StaticResource PageTitle}"/>

                    <TextBlock Text="Imagen del Combo" 
                              FontSize="14" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,8"/>
                    <Border BorderBrush="{StaticResource LightBorder}" 
                           BorderThickness="2" 
                           Height="200"
                           Margin="0,0,0,15"
                           Background="{StaticResource CardGray}"
                           CornerRadius="12">
                        <Grid>
                            <Image x:Name="ImagenPreview" 
                                  Stretch="Uniform"
                                  Margin="10"/>
                            <StackPanel VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       x:Name="PlaceholderText">
                                <TextBlock Text="📷" 
                                         FontSize="48" 
                                         HorizontalAlignment="Center"
                                         Foreground="#999"/>
                                <TextBlock Text="Seleccionar imagen" 
                                         FontSize="14" 
                                         HorizontalAlignment="Center"
                                         Foreground="#666"
                                         Margin="0,10,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Button Content="Seleccionar Imagen" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Padding="15,8"
                           Margin="0,0,0,20"
                           Click="SeleccionarImagen_Click"/>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Nombre del Combo *" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="NombreTextBox" 
                               Style="{StaticResource FormInputStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Precio *" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="PrecioTextBox" 
                               Style="{StaticResource FormInputStyle}"
                               PreviewTextInput="PrecioTextBox_PreviewTextInput"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Tiempo Incluido" Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="TiempoComboBox"
                                 Style="{StaticResource ModernComboBoxStyle}">
                            <ComboBoxItem Content="Sin tiempo" IsSelected="True" Tag="0"/>
                        </ComboBox>
                        <TextBlock Text="Selecciona si el combo incluye tiempo de juego"
                                  FontSize="11"
                                  Foreground="{StaticResource TextLight}"
                                  Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- NUEVO: CheckBox de Estado -->
                    <Border Background="{StaticResource BackgroundPurple}" 
                           CornerRadius="8" 
                           Padding="15"
                           Margin="0,0,0,20">
                        <CheckBox x:Name="EstadoCheckBox"
                                 Content="Combo activo y disponible"
                                 FontSize="14"
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource HoverPurple}"
                                 IsChecked="True"/>
                    </Border>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Productos Incluidos *" Style="{StaticResource FormLabel}"/>
                        <Button Content="+ Agregar Productos" 
                               Style="{StaticResource GreenButtonStyle}"
                               Click="AgregarProductos_Click"
                               Margin="0,0,0,10"/>

                        <Border BorderBrush="{StaticResource DarkBorder}" 
                               BorderThickness="1" 
                               Background="{StaticResource LightGray}"
                               MinHeight="100"
                               MaxHeight="200"
                               CornerRadius="8"
                               Visibility="{Binding ElementName=ProductosSeleccionadosStack, Path=Children.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="ProductosSeleccionadosStack" Margin="10"/>
                            </ScrollViewer>
                        </Border>

                        <TextBlock x:Name="ProductosCountText"
                                 Text="No hay productos seleccionados" 
                                 Foreground="{StaticResource TextLight}" 
                                 FontSize="12" 
                                 Margin="0,8,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Guardar Combo" 
                              Style="{StaticResource PrimaryButtonStyle}"
                              Click="GuardarCombo_Click" 
                              Width="289"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" 
                Style="{StaticResource CardStyle}"
                Padding="25" 
                Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                       BorderBrush="{StaticResource BorderGray}" 
                       BorderThickness="1"
                       Background="White"
                       CornerRadius="12"
                       ClipToBounds="True">
                    <DataGrid x:Name="CombosDataGrid"
                            Style="{StaticResource ModernDataGridStyle}"
                            CanUserReorderColumns="False">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource DataGridHeaderStyle}">
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell" BasedOn="{StaticResource DataGridCellStyle}">
                                <Setter Property="Padding" Value="15,0"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="{StaticResource MediumGray}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource LightGray}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="60" Binding="{Binding Id}"/>
                            
                            <DataGridTextColumn Header="Nombre" Width="*" Binding="{Binding Nombre}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#111827"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Precio" Width="100" Binding="{Binding Precio, StringFormat=C}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="{StaticResource SuccessGreen}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Productos" Width="*" Binding="{Binding Productos}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Tiempo Incluido" Width="140" Binding="{Binding TiempoInfo}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource WarningOrange}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- NUEVA COLUMNA: Estado -->
                            <DataGridTemplateColumn Header="Estado" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="6" Padding="10,5">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Activo">
                                                            <Setter Property="Background" Value="{StaticResource LightGreen}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Estado}" Value="Inactivo">
                                                            <Setter Property="Background" Value="{StaticResource LightRed}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Estado}" 
                                                      HorizontalAlignment="Center"
                                                      FontWeight="Bold"
                                                      FontSize="12">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Estado}" Value="Activo">
                                                                <Setter Property="Foreground" Value="{StaticResource DarkGreen}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Estado}" Value="Inactivo">
                                                                <Setter Property="Foreground" Value="{StaticResource DarkRed}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Acciones" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <ToggleButton x:Name="ActionsToggleButton"
                                                         Content="⋯" 
                                                         FontSize="20"
                                                         FontWeight="Bold"
                                                         Width="30" 
                                                         Height="30" 
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         Foreground="{StaticResource TextLight}"
                                                         Cursor="Hand"
                                                         HorizontalAlignment="Center">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            CornerRadius="6"
                                                                            Padding="5">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                                        VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource MediumGray}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>

                                            <Popup IsOpen="{Binding IsChecked, ElementName=ActionsToggleButton}"
                                                   StaysOpen="False"
                                                   PlacementTarget="{Binding ElementName=ActionsToggleButton}"
                                                   Placement="Bottom"
                                                   AllowsTransparency="True">
                                                <Border Background="White"
                                                       BorderBrush="{StaticResource BorderGray}"
                                                       BorderThickness="1"
                                                       CornerRadius="8"
                                                       Padding="5">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="10" 
                                                                        ShadowDepth="0" 
                                                                        Opacity="0.1" 
                                                                        Color="#000000"/>
                                                    </Border.Effect>
                                                    <StackPanel>
                                                        <Button Content="✏️ Editar"
                                                               Background="Transparent"
                                                               BorderThickness="0"
                                                               Padding="15,10"
                                                               FontSize="14"
                                                               HorizontalContentAlignment="Left"
                                                               Cursor="Hand"
                                                               Click="EditarCombo_Click"
                                                               Tag="{Binding}">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                        CornerRadius="6"
                                                                                        Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="{StaticResource MediumGray}"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                        <Button Content="🗑️ Borrar"
                                                               Background="Transparent"
                                                               BorderThickness="0"
                                                               Padding="15,10"
                                                               FontSize="14"
                                                               HorizontalContentAlignment="Left"
                                                               Cursor="Hand"
                                                               Foreground="{StaticResource DangerRed}"
                                                               Click="BorrarCombo_Click"
                                                               Tag="{Binding}">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                        CornerRadius="6"
                                                                                        Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="{StaticResource LightRed}"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </StackPanel>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <Grid Grid.Row="1" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                              x:Name="ContadorTextBlock" 
                              Text="Mostrando 0 de 0 combos"
                              Foreground="{StaticResource TextLight}"
                              FontSize="14"
                              VerticalAlignment="Center"/>

                    <!-- NUEVO: Contadores de Estado -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Border Background="{StaticResource LightGreen}" 
                               CornerRadius="8" 
                               Padding="15,8"
                               Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" 
                                        Height="8" 
                                        Fill="{StaticResource DarkGreen}"
                                        VerticalAlignment="Center"
                                        Margin="0,0,8,0"/>
                                <TextBlock x:Name="ActiveCountText"
                                          Text="0 Activos" 
                                          FontSize="13" 
                                          FontWeight="Bold"
                                          Foreground="{StaticResource DarkGreen}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Background="{StaticResource LightRed}" 
                               CornerRadius="8" 
                               Padding="15,8">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" 
                                        Height="8" 
                                        Fill="{StaticResource DarkRed}"
                                        VerticalAlignment="Center"
                                        Margin="0,0,8,0"/>
                                <TextBlock x:Name="InactiveCountText"
                                          Text="0 Inactivos" 
                                          FontSize="13" 
                                          FontWeight="Bold"
                                          Foreground="{StaticResource DarkRed}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>