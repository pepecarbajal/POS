<Page x:Class="POS.paginas.detalles_ventas.DetallesVentasPag"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Detalles de Ventas"
      Background="#f5f7fa">

    <Page.Resources>
        <!-- Animaciones -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <!-- Estilos -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1a1a2e"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#6C5CE7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5F4FD1"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#5242C4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Page.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel Superior Combinado -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Padding="28">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Calendario -->
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="📅" Style="{StaticResource IconTextBlock}"/>
                        <TextBlock Text="Filtro por Fecha" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="#1a1a2e"/>
                    </StackPanel>

                    <Calendar x:Name="FechaFiltro"
                              SelectedDatesChanged="FechaFiltro_SelectedDateChanged"
                              FontSize="14"
                              HorizontalAlignment="Center"
                              BorderBrush="#6C5CE7"
                              BorderThickness="2"
                              Background="Transparent">
                        <Calendar.CalendarDayButtonStyle>
                            <Style TargetType="CalendarDayButton">
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Width" Value="38"/>
                                <Setter Property="Height" Value="38"/>
                                <Setter Property="Margin" Value="2"/>
                            </Style>
                        </Calendar.CalendarDayButtonStyle>
                    </Calendar>

                    <Border Background="#F8F9FF" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,16,0,0">
                        <TextBlock Text="💡 Selecciona una fecha para filtrar las ventas" 
                                   FontSize="12" 
                                   Foreground="#6C5CE7"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Panel de Estadísticas -->
                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                    <!-- Total del Día - Card Grande -->
                    <Border Margin="0,0,0,20">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#6C5CE7" Offset="0"/>
                                <GradientStop Color="#A29BFE" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="16"/>
                                <Setter Property="Padding" Value="32,28"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#6C5CE7" Opacity="0.3" BlurRadius="30" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Border.Style>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Background="White"
                                    Opacity="0.2"
                                    CornerRadius="16"
                                    Width="80"
                                    Height="80"
                                    Margin="0,0,24,0">
                                <TextBlock Text="💰" 
                                           FontSize="44"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="TOTAL DEL DÍA" 
                                           FontSize="14" 
                                           FontWeight="Bold"
                                           Foreground="White"
                                           Opacity="0.9"
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="TotalVentasTextBlock"
                                           Text="$0.00" 
                                           FontSize="48" 
                                           FontWeight="Bold"
                                           Foreground="White"/>
                                <TextBlock Text="Ventas registradas en la fecha seleccionada" 
                                           FontSize="13" 
                                           Foreground="White"
                                           Opacity="0.85"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Número de Ventas -->
                        <Border Grid.Column="0" 
                            Background="#F8F9FF" 
                            CornerRadius="14" 
                            Padding="20,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                    Background="#6C5CE7"
                                    CornerRadius="12"
                                    Width="56"
                                    Height="56"
                                    Margin="0,0,16,0">
                                    <TextBlock Text="🛒" 
                           FontSize="28"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Ventas" 
                           FontSize="12" 
                           Foreground="#7f8c8d"
                           Margin="0,0,0,4"/>
                                    <TextBlock x:Name="NumeroVentasTextBlock"
                           Text="0" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="#1a1a2e"/>
                                    <TextBlock Text="realizadas" 
                           FontSize="11" 
                           Foreground="#7f8c8d"
                           Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Tiempos Vendidos -->
                        <Border Grid.Column="2" 
            Background="#FFF4E6" 
            CornerRadius="14" 
            Padding="20,18">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                    Background="#FF9F43"
                    CornerRadius="12"
                    Width="56"
                    Height="56"
                    Margin="0,0,16,0">
                                    <TextBlock Text="⏱️" 
                           FontSize="28"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Tiempos" 
                           FontSize="12" 
                           Foreground="#7f8c8d"
                           Margin="0,0,0,4"/>
                                    <TextBlock x:Name="TiemposVendidosTextBlock"
                           Text="0" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="#1a1a2e"/>
                                    <TextBlock Text="vendidos" 
                           FontSize="11" 
                           Foreground="#7f8c8d"
                           Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Botón Descargar PDF -->
                        <Button Grid.Column="4" 
            x:Name="DescargarPdfButton"
            Click="DescargarPdf_Click"
            Background="#22c55e"
            BorderThickness="0"
            Padding="20,18"
            Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="14"
                        Padding="{TemplateBinding Padding}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0"
                                Background="White"
                                Opacity="0.3"
                                CornerRadius="12"
                                Width="56"
                                Height="56"
                                Margin="0,0,16,0">
                                                <TextBlock Text="📄" 
                                       FontSize="28"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="Descargar" 
                                       FontSize="12" 
                                       Foreground="White"
                                       Opacity="0.9"
                                       Margin="0,0,0,4"/>
                                                <TextBlock Text="Reporte PDF" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                                                <TextBlock Text="del día seleccionado" 
                                       FontSize="11" 
                                       Foreground="White"
                                       Opacity="0.85"
                                       Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#16a34a"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#15803d"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista de Ventas -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="VentasItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Encabezado de Venta -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icono -->
                                    <Border Grid.Column="0"
                                            Background="#F8F9FF"
                                            CornerRadius="12"
                                            Width="56"
                                            Height="56"
                                            Margin="0,0,16,0">
                                        <TextBlock Text="🧾" 
                                                   FontSize="28"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Información -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Fecha, StringFormat='Venta del {0:dd/MM/yyyy}'}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold"
                                                   Foreground="#1a1a2e"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="🕐" FontSize="12" Margin="0,0,4,0" Foreground="#7f8c8d"/>
                                            <TextBlock Text="{Binding Fecha, StringFormat='{}{0:HH:mm}'}" 
                                                       FontSize="13" 
                                                       Foreground="#7f8c8d"
                                                       Margin="0,0,12,0"/>
                                            <TextBlock Text="•" FontSize="13" Foreground="#7f8c8d" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Id, StringFormat='ID: {0}'}" 
                                                       FontSize="13" 
                                                       Foreground="#7f8c8d"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Total -->
                                    <Border Grid.Column="2"
                                            Background="#F8F9FF"
                                            CornerRadius="10"
                                            Padding="20,12"
                                            Margin="0,0,16,0">
                                        <StackPanel>
                                            <TextBlock Text="Total" 
                                                       FontSize="11" 
                                                       Foreground="#6C5CE7"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,0,0,2"/>
                                            <TextBlock Text="{Binding Total, StringFormat='${0:N2}'}" 
                                                       FontSize="22" 
                                                       FontWeight="Bold"
                                                       Foreground="#6C5CE7"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Botón -->
                                    <Button Grid.Column="3" 
                                            Style="{StaticResource ModernButton}"
                                            Click="ToggleDetails_Click"
                                            Tag="{Binding}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock x:Name="ExpandButtonText" Text="Ver Detalles" Margin="0,0,6,0"/>
                                            <TextBlock Text="▼" FontSize="10"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <!-- Detalles de Productos -->
                                <Border Grid.Row="1" 
                                        x:Name="DetailsPanel"
                                        Visibility="Collapsed"
                                        Background="#F8F9FF"
                                        CornerRadius="12"
                                        Padding="20"
                                        Margin="0,20,0,0">
                                    <StackPanel>
                                        <Grid Margin="0,0,0,16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🛍️" Style="{StaticResource IconTextBlock}"/>
                                                <TextBlock Text="Productos Vendidos" 
                                                           FontSize="16" 
                                                           FontWeight="Bold"
                                                           Foreground="#1a1a2e"/>
                                            </StackPanel>

                                            <Border Grid.Column="1"
                                                    Background="#6C5CE7"
                                                    CornerRadius="12"
                                                    Padding="10,4">
                                                <TextBlock Text="{Binding DetallesVenta.Count, StringFormat='{}{0} items'}" 
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"/>
                                            </Border>
                                        </Grid>

                                        <ItemsControl ItemsSource="{Binding DetallesVenta}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White" 
                                                            CornerRadius="10" 
                                                            Padding="16" 
                                                            Margin="0,0,0,8">
                                                        <Border.Effect>
                                                            <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="0"/>
                                                        </Border.Effect>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                                <TextBlock Text="{Binding NombreParaMostrar}" 
                                                                           FontSize="14"
                                                                           FontWeight="SemiBold"     
                                                                           Foreground="#1a1a2e"/>
                                                                <TextBlock Text="{Binding PrecioUnitario, StringFormat='${0:N2} por unidad'}" 
                                                                           FontSize="11"
                                                                           Foreground="#7f8c8d"
                                                                           Margin="0,2,0,0"/>
                                                            </StackPanel>

                                                            <Border Grid.Column="1"
                                                                    Background="#F0F0F0"
                                                                    CornerRadius="6"
                                                                    Padding="10,4"
                                                                    Margin="12,0">
                                                                <TextBlock Text="{Binding Cantidad, StringFormat='x{0}'}" 
                                                                           FontSize="13"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="#555"/>
                                                            </Border>

                                                            <TextBlock Grid.Column="2" 
                                                                       Text="{Binding Subtotal, StringFormat='${0:N2}'}" 
                                                                       FontSize="16"
                                                                       FontWeight="Bold"
                                                                       Foreground="#6C5CE7"
                                                                       VerticalAlignment="Center"
                                                                       Margin="20,0,0,0"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>