<Page x:Class="POS.paginas.ventas.VentasPag"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Ventas"
      Background="{StaticResource BackgroundGray}">

    <Page.Resources>
        <!-- Estilo para tarjetas de productos -->
        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryPurple}"/>
                    <Setter Property="Background" Value="{StaticResource LightGray}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón de categoría -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverPurple}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="450"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Búsqueda -->
            <Border Grid.Row="0" 
                    Background="White"
                    BorderBrush="{StaticResource LightBorder}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,0,15">
                <Border BorderBrush="{StaticResource LightBorder}" 
                        BorderThickness="1" 
                        Background="White"
                        CornerRadius="6"
                        Padding="15,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="🔍" 
                                   FontSize="18" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   Foreground="{StaticResource TextPlaceholder}"/>
                        <Grid Grid.Column="1">
                            <TextBlock Text="Buscar productos..."
                                       FontSize="14"
                                       Foreground="{StaticResource TextPlaceholder}"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       x:Name="PlaceholderText">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBox x:Name="SearchTextBox"
                                     BorderThickness="0" 
                                     FontSize="14"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Foreground="#333"
                                     Height="40"
                                     Padding="0,8,0,0"
                                     Background="Transparent"
                                     TextChanged="SearchTextBox_TextChanged"/>
                        </Grid>
                    </Grid>
                </Border>
            </Border>

            <!-- Selectores de categoría -->
            <Border Grid.Row="1"
        Background="White"
        BorderBrush="{StaticResource LightBorder}"
        BorderThickness="1"
        CornerRadius="8"
        Padding="10"
        Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                  x:Name="CategoriasComboBox"
                  Style="{StaticResource ModernComboBoxStyle}"
                  Margin="0,0,10,0"
                  SelectionChanged="CategoriasComboBox_SelectionChanged"
                  SelectedValuePath="Id">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Nombre}" 
                               FontSize="14"
                               Foreground="{StaticResource TextDark}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Grid.Column="1"
                Content="Productos"
                Style="{StaticResource CategoryButtonStyle}"
                Margin="0,0,5,0"
                Click="ProductosButton_Click"/>

                    <Button Grid.Column="2"
                Content="Combos"
                Style="{StaticResource CategoryButtonStyle}"
                Margin="0,0,5,0"
                Click="CombosButton_Click"/>

                    <Button Grid.Column="3"
                Content="Tiempo"
                Style="{StaticResource CategoryButtonStyle}"
                Margin="0"
                Click="TiempoButton_Click"/>
                </Grid>
            </Border>

            <!-- Contenedor de productos/tiempo -->
            <Border Grid.Row="2"
                    Background="White"
                    BorderBrush="{StaticResource LightBorder}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10">
                <Grid>
                    <!-- Vista de productos/combos -->
                    <ScrollViewer x:Name="ProductosScrollViewer" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ProductosItemsControl" Margin="10">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ProductCardStyle}" Width="220" Height="300" MouseLeftButtonDown="ProductCard_Click">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="220"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Border Grid.Row="0" 
                                                    Background="{StaticResource CardGray}"
                                                    CornerRadius="6,6,0,0"
                                                    Margin="5,5,5,0">
                                                <Grid>
                                                    <Image x:Name="ProductImage"
                                                           Stretch="UniformToFill"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center">
                                                        <Image.Source>
                                                            <Binding Path="ImagenUrl">
                                                                <Binding.TargetNullValue>
                                                                    <x:Null/>
                                                                </Binding.TargetNullValue>
                                                            </Binding>
                                                        </Image.Source>
                                                    </Image>
                                                    <TextBlock Text="📦"
                                                               FontSize="64"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Foreground="{StaticResource TextPlaceholder}">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ImagenUrl}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding ImagenUrl}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>

                                            <StackPanel Grid.Row="1" Margin="12,8">
                                                <Grid>
                                                    <TextBlock Text="{Binding Nombre}"
                                                               Foreground="{StaticResource TextMedium}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               TextWrapping="Wrap"
                                                               MaxHeight="32"
                                                               TextTrimming="CharacterEllipsis"
                                                               HorizontalAlignment="Left"/>
                                                </Grid>

                                                <Grid Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding Precio, StringFormat='${0:N2}'}"
                                                               Foreground="{StaticResource PrimaryPurple}"
                                                               FontSize="14"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Left"/>

                                                    <TextBlock Text="{Binding Stock}"
                                                               Foreground="{StaticResource SuccessGreen}"
                                                               FontSize="11"
                                                               FontWeight="SemiBold"
                                                               HorizontalAlignment="Right">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding EsCombo}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Vista de Tiempo -->
                    <Grid x:Name="TiempoPanel" Visibility="Collapsed" Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>

                        <!-- Lista de tiempos activos (IZQUIERDA) -->
                        <Border Grid.Column="0"
                                Background="White"
                                BorderBrush="{StaticResource LightBorder}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0"
                                        Background="{StaticResource PrimaryPurple}"
                                        CornerRadius="6"
                                        Padding="15,12"
                                        Margin="0,0,0,20">
                                    <TextBlock Text="⏱ TIEMPOS ACTIVOS"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                </Border>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="TiemposActivosItemsControl">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="2"
                                                        CornerRadius="8"
                                                        Padding="20"
                                                        Margin="0,0,0,15">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <!-- Combo con tiempo: fondo morado -->
                                                                <DataTrigger Binding="{Binding EsCombo}" Value="True">
                                                                    <Setter Property="Background" Value="{StaticResource BackgroundPurple}"/>
                                                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryPurple}"/>
                                                                </DataTrigger>
                                                                <!-- Tiempo individual: fondo gris -->
                                                                <DataTrigger Binding="{Binding EsCombo}" Value="False">
                                                                    <Setter Property="Background" Value="{StaticResource CardGray}"/>
                                                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryPurple}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>

                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <!-- Icono -->
                                                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
                                                                Background="{StaticResource PrimaryPurple}"
                                                                CornerRadius="6"
                                                                Width="50"
                                                                Height="50"
                                                                Margin="0,0,15,0">
                                                            <TextBlock FontSize="28"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding EsCombo}" Value="True">
                                                                                <Setter Property="Text" Value="🎁"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding EsCombo}" Value="False">
                                                                                <Setter Property="Text" Value="🎮"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>

                                                        <!-- NFC -->
                                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                                   FontSize="18"
                                                                   FontWeight="Bold"
                                                                   Foreground="{StaticResource TextMedium}">
                                                            <Run Text="NFC: "/>
                                                            <Run Text="{Binding IdNfc}" Foreground="{StaticResource PrimaryPurple}"/>
                                                        </TextBlock>

                                                        <!-- Hora de entrada -->
                                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                                   FontSize="15"
                                                                   Foreground="#666"
                                                                   Margin="0,8,0,0">
                                                            <Run Text="⏰ Entrada: "/>
                                                            <Run Text="{Binding HoraEntrada, StringFormat='hh:mm tt'}" 
                                                                 FontWeight="Bold" 
                                                                 Foreground="{StaticResource TextMedium}"/>
                                                        </TextBlock>

                                                        <!-- Información adicional (combo o tiempo individual) -->
                                                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,8,0,0">
                                                            <!-- Para combos: mostrar nombre y minutos -->
                                                            <TextBlock FontSize="14" Foreground="#666">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding EsCombo}" Value="True">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                                <Run Text="📦 "/>
                                                                <Run Text="{Binding NombreCombo}" FontWeight="SemiBold"/>
                                                                <LineBreak/>
                                                                <Run Text="⏱ "/>
                                                                <Run Text="{Binding MinutosIncluidos}"/>
                                                                <Run Text=" min incluidos"/>
                                                                <Run Text=" • Total: $"/>
                                                                <Run Text="{Binding MontoTotal, StringFormat='F2'}" FontWeight="Bold"/>
                                                            </TextBlock>
                                                        </StackPanel>

                                                        <!-- Badge de estado -->
                                                        <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="3"
                                                                Background="{StaticResource SuccessGreen}"
                                                                CornerRadius="6"
                                                                Padding="15,8"
                                                                VerticalAlignment="Center">
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="●" FontSize="16" Margin="0,0,8,0" Foreground="White"/>
                                                                <TextBlock Text="ACTIVO"
                                                                           FontSize="14"
                                                                           FontWeight="Bold"
                                                                           Foreground="White"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Panel de controles (DERECHA) -->
                        <Border Grid.Column="2"
                                Background="White"
                                BorderBrush="{StaticResource LightBorder}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                            <StackPanel>
                                <!-- Header -->
                                <Border Background="{StaticResource PrimaryPurple}"
                                        CornerRadius="6"
                                        Padding="15,12"
                                        Margin="0,0,0,25">
                                    <TextBlock Text="⚙ CONTROLES"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                </Border>

                                <!-- Botones de acción -->
                                <Button x:Name="IniciarTiempoButton"
                                        Content="▶ Iniciar Tiempo"
                                        Style="{StaticResource GreenButtonStyle}"
                                        FontSize="18"
                                        Padding="0,20"
                                        Margin="0,0,0,15"
                                        Click="IniciarTiempo_Click"/>

                                <Button x:Name="FinalizarTiempoButton"
                                        Content="⏹ Finalizar Tiempo"
                                        Style="{StaticResource DangerButtonStyle}"
                                        FontSize="18"
                                        Padding="0,20"
                                        Margin="0,0,0,15"
                                        Click="FinalizarTiempo_Click"/>

                                <!-- Agregado botón para recuperar venta pendiente -->
                                <Button x:Name="RecuperarVentaButton"
                                        Content="🔍 Recuperar Venta Pendiente"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        FontSize="18"
                                        Padding="0,20"
                                        Click="RecuperarVenta_Click"/>

                                <!-- Indicador de espera -->
                                <Border x:Name="WaitingIndicator"
                                        Background="{StaticResource WarningYellow}"
                                        BorderBrush="#f59e0b"
                                        BorderThickness="2"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="0,25,0,0"
                                        Visibility="Collapsed">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                            <TextBlock Text="⏳" FontSize="32" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <TextBlock x:Name="WaitingText"
                                                       Text="Esperando tarjeta NFC..."
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="#92400e"
                                                       TextWrapping="Wrap"
                                                       TextAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <Button x:Name="CancelWaitingButton"
                                                Content="✕ Cancelar"
                                                Style="{StaticResource DangerButtonStyle}"
                                                FontSize="16"
                                                Padding="15,12"
                                                Click="CancelarWaiting_Click"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Carrito -->
        <Border Grid.Column="1"
                Background="White"
                BorderBrush="{StaticResource LightBorder}"
                BorderThickness="1"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header del carrito con botón Cancelar -->
                <Border Grid.Row="0"
                        Background="{StaticResource PrimaryPurple}"
                        CornerRadius="8,8,0,0"
                        Padding="15">
                    <Grid>
                        <TextBlock Text="Carrito"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <!-- Botón Cancelar en el header -->
                        <Button x:Name="CancelarButton"
                                Content="✕"
                                FontSize="20"
                                FontWeight="Bold"
                                Width="40"
                                Height="40"
                                Background="#ef4444"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Click="CancelarVenta_Click"
                                ToolTip="Cancelar venta">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#ef4444"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#dc2626"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="10">
                    <ItemsControl x:Name="CarritoItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                        BorderBrush="{StaticResource LightBorder}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="15"
                                        Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding Nombre}"
                                                   FontSize="15"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextMedium}"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="280"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   FontSize="14"
                                                   Foreground="#666"
                                                   Margin="0,5,0,0">
                                            <Run Text="Precio: "/>
                                            <Run Text="{Binding PrecioUnitario, StringFormat='${0:N2}'}" FontWeight="SemiBold"/>
                                        </TextBlock>

                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   FontSize="14"
                                                   Foreground="#666"
                                                   Margin="0,3,0,0">
                                            <Run Text="Cantidad: "/>
                                            <Run Text="{Binding Cantidad}" FontWeight="Bold"/>
                                        </TextBlock>

                                        <TextBlock Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                                   Text="{Binding Total, StringFormat='${0:N2}'}"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryPurple}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>

                                        <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="3"
                                                Content="✕"
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Width="35"
                                                Height="35"
                                                Style="{StaticResource DangerButtonStyle}"
                                                Padding="0"
                                                VerticalAlignment="Center"
                                                Click="RemoveFromCart_Click"
                                                ToolTip="Eliminar producto"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Border Grid.Row="2"
        Background="White"
        Padding="15"
        BorderBrush="{StaticResource LightBorder}"
        BorderThickness="0,1,0,0">
                    <StackPanel>
                        <!-- Total -->
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="Total:"
                       Foreground="{StaticResource PrimaryPurple}"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"/>
                            <TextBlock x:Name="TotalTextBlock"
                       Text="$0.00"
                       Foreground="{StaticResource PrimaryPurple}"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- Separador -->
                        <Border Height="1" 
                Background="{StaticResource LightBorder}" 
                Margin="0,0,0,15"/>

                        <!-- Calculadora de Cambio -->
                        <StackPanel>
                            <TextBlock Text="Calculadora de Cambio"
                                       FontSize="14" 
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextMedium}"
                       Margin="0,0,0,10"/>

                            <!-- Recibido -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                           Text="Recibido:"
                           FontSize="13"
                           Foreground="{StaticResource TextLight}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                                <Border Grid.Column="1"
                        BorderBrush="{StaticResource LightBorder}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Background="White">
                                    <TextBox x:Name="RecibidoTextBox"
                             Text="0"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextDark}"
                             Padding="10,8"
                             BorderThickness="0"
                             Background="Transparent"
                             TextAlignment="Right"
                             TextChanged="RecibidoTextBox_TextChanged"
                             PreviewTextInput="RecibidoTextBox_PreviewTextInput"/>
                                </Border>
                            </Grid>

                            <!-- Cambio -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                           Text="Cambio:"
                           FontSize="13"
                           Foreground="{StaticResource TextLight}"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                                <Border Grid.Column="1"
                        Background="{StaticResource SuccessGreen}"
                        CornerRadius="6"
                        Padding="10,8">
                                    <TextBlock x:Name="CambioTextBlock"
                               Text="$0.00"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               TextAlignment="Right"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Sección de botón único de Finalizar -->
                <Grid Grid.Row="3" Margin="10">
                    <!-- Botón Finalizar Venta (siempre visible) -->
                    <Button x:Name="FinalizarVentaButton"
                            Content="Finalizar Venta"
                            Style="{StaticResource PrimaryButtonStyle}"
                            FontSize="18"
                            Padding="15"
                            Click="FinalizarVenta_Click"/>

                    <!-- Botón Guardar Pendiente (oculto por defecto, reemplaza a Finalizar cuando hay combo con tiempo) -->
                    <Button x:Name="PendienteButton"
                            Content="Guardar Pendiente"
                            Style="{StaticResource SecondaryButtonStyle}"
                            FontSize="18"
                            Padding="15"
                            Visibility="Collapsed"
                            Click="GuardarVentaPendiente_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>