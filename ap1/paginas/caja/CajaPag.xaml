<Page x:Class="POS.paginas.caja.CajaPag"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Gestión de Caja"
      Background="#0f0a1a">

    <Page.Resources>
        <!-- Estilo para las tarjetas principales -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1a0b2e"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#2d1b4e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" BlurRadius="15" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para títulos de tarjeta -->
        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- Estilo para botones grandes -->
        <Style x:Key="BigActionButton" TargetType="Button">
            <Setter Property="Background" Value="#7c3aed"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8b5cf6"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6d28d9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botones secundarios -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource BigActionButton}">
            <Setter Property="Background" Value="#2d1850"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3d2563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para etiquetas de valores -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#9ca3af"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Estilo para valores numéricos -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Estilo para valores destacados -->
        <Style x:Key="HighlightValueStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueStyle}">
            <Setter Property="Foreground" Value="#8b5cf6"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  Padding="30,20">
        <StackPanel MaxWidth="1400">

            <!-- Encabezado -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="💰 Gestión de Caja"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="txtFechaActual"
                               Text="Fecha de hoy"
                               FontSize="14"
                               Foreground="#9ca3af"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Border Background="#1a0b2e"
                            CornerRadius="10"
                            Padding="20,10"
                            BorderBrush="#8b5cf6"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Estado del Corte"
                                       FontSize="11"
                                       Foreground="#9ca3af"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtEstadoCorte"
                                       Text="ABIERTO"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#10b981"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Fila 1: Resumen de Efectivo -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Efectivo Inicial -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Efectivo Inicial" Style="{StaticResource CardTitleStyle}"/>
                        <TextBlock x:Name="txtEfectivoInicial"
                                   Text="$0.00"
                                   Style="{StaticResource ValueStyle}"/>
                        <TextBlock Text="Al abrir caja"
                                   FontSize="12"
                                   Foreground="#6b7280"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Efectivo Esperado -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Efectivo Esperado" Style="{StaticResource CardTitleStyle}"/>
                        <TextBlock x:Name="txtEfectivoEsperado"
                                   Text="$0.00"
                                   Style="{StaticResource HighlightValueStyle}"/>
                        <TextBlock Text="Según ventas y movimientos"
                                   FontSize="12"
                                   Foreground="#6b7280"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Diferencia -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Diferencia" Style="{StaticResource CardTitleStyle}"/>
                        <TextBlock x:Name="txtDiferencia"
                                   Text="$0.00"
                                   Style="{StaticResource ValueStyle}"/>
                        <TextBlock x:Name="txtTipoDiferencia"
                                   Text="Sin diferencia"
                                   FontSize="12"
                                   Foreground="#10b981"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Fila 2: Ventas del Día -->
            <Border Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="📊 Ventas del Día" 
                               Style="{StaticResource CardTitleStyle}"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ventas en Efectivo -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Ventas en Efectivo" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock x:Name="txtCantidadVentasEfectivo"
                                           Text="(0)"
                                           FontSize="16"
                                           Foreground="#9ca3af"
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Bottom"/>
                                <TextBlock x:Name="txtTotalVentasEfectivo"
                                           Text="$0.00"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="#10b981"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Ventas con Tarjeta -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Ventas con Tarjeta" Style="{StaticResource LabelStyle}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock x:Name="txtCantidadVentasTarjeta"
                                           Text="(0)"
                                           FontSize="16"
                                           Foreground="#9ca3af"
                                           Margin="0,0,10,0"
                                           VerticalAlignment="Bottom"/>
                                <TextBlock x:Name="txtTotalVentasTarjeta"
                                           Text="$0.00"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="#3b82f6"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Total Ventas -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Total Ventas" Style="{StaticResource LabelStyle}"/>
                            <TextBlock x:Name="txtTotalVentas"
                                       Text="$0.00"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Fila 3: Movimientos de Caja -->
            <Grid Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Depósitos -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="➕ Depósitos" Style="{StaticResource CardTitleStyle}"/>
                        <TextBlock x:Name="txtTotalDepositos"
                                   Text="$0.00"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#10b981"/>
                        <TextBlock Text="Entradas de efectivo"
                                   FontSize="12"
                                   Foreground="#6b7280"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Retiros -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="➖ Retiros" Style="{StaticResource CardTitleStyle}"/>
                        <TextBlock x:Name="txtTotalRetiros"
                                   Text="$0.00"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#ef4444"/>
                        <TextBlock Text="Salidas de efectivo"
                                   FontSize="12"
                                   Foreground="#6b7280"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Fila 4: Acciones -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="⚡ Acciones Rápidas" Style="{StaticResource CardTitleStyle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Primera fila de botones -->
                        <Button Grid.Column="0" Grid.Row="0"
                                Style="{StaticResource BigActionButton}"
                                Click="BtnAbrirCaja_Click"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="🔓" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Abrir Caja" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1" Grid.Row="0"
                                Style="{StaticResource SecondaryButton}"
                                Click="BtnDeposito_Click"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="➕" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Registrar Depósito" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2" Grid.Row="0"
                                Style="{StaticResource SecondaryButton}"
                                Click="BtnRetiro_Click"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="➖" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Registrar Retiro" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Segunda fila de botones -->
                        <Button Grid.Column="0" Grid.Row="1"
                                Style="{StaticResource BigActionButton}"
                                Background="#ef4444"
                                Click="BtnCerrarCaja_Click"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="🔒" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Cerrar Caja" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1" Grid.Row="1"
                                Style="{StaticResource SecondaryButton}"
                                Click="BtnVerMovimientos_Click"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="📋" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Ver Movimientos" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2" Grid.Row="1"
                                Style="{StaticResource SecondaryButton}"
                                Click="BtnImprimirCorte_Click"
                                Margin="5">
                            <StackPanel>
                                <TextBlock Text="🖨️" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Imprimir Corte" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Últimos movimientos -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="📝 Últimos Movimientos" Style="{StaticResource CardTitleStyle}" Margin="0"/>
                        <Button Content="↻ Actualizar"
                                HorizontalAlignment="Right"
                                Background="Transparent"
                                Foreground="#8b5cf6"
                                BorderThickness="0"
                                FontSize="13"
                                Cursor="Hand"
                                Click="BtnActualizar_Click"/>
                    </Grid>

                    <DataGrid x:Name="dgMovimientos"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="Transparent"
                              BorderThickness="0"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowBackground="#0d0520"
                              AlternatingRowBackground="#1a0b2e"
                              Foreground="White"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              Height="250">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2d1850"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Fecha" 
                                              Binding="{Binding Fecha, StringFormat={}{0:dd/MM/yyyy HH:mm}}" 
                                              Width="150"/>
                            <DataGridTextColumn Header="Tipo" 
                                              Binding="{Binding TipoMovimientoTexto}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Monto" 
                                              Binding="{Binding Monto, StringFormat=C2}" 
                                              Width="120"/>
                            <DataGridTextColumn Header="Concepto" 
                                              Binding="{Binding Concepto}" 
                                              Width="*"/>
                            <DataGridTextColumn Header="Usuario" 
                                              Binding="{Binding Usuario}" 
                                              Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
